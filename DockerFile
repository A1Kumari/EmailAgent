# ═══════════════════════════════════════════════════════
# Dockerfile — Email Agent (Multi-stage Build)
# 
# R5: Docker containerization with:
#   - Multi-stage build for minimal image size (AC2)
#   - Python 3.11+ with all dependencies (AC1)
#   - Proper signal handling for graceful shutdown (AC8)
#   - Health check support
# ═══════════════════════════════════════════════════════

# ──────────────────────────────────────────────
# STAGE 1: Builder — install dependencies
# ──────────────────────────────────────────────
FROM python:3.11-slim AS builder

# Prevent Python from writing .pyc files and enable unbuffered output
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /build

# Install build dependencies (needed for some pip packages)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy only requirements first (Docker layer caching)
COPY requirements.txt .

# Install Python dependencies into a virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt


# ──────────────────────────────────────────────
# STAGE 2: Runtime — minimal final image
# ──────────────────────────────────────────────
FROM python:3.11-slim AS runtime

# Labels for image metadata
LABEL maintainer="email-agent" \
    description="AI-powered email automation agent with Gemini" \
    version="2.0.0"

# Prevent Python from writing .pyc files and enable unbuffered output
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Create non-root user for security
RUN groupadd --gid 1000 agent && \
    useradd --uid 1000 --gid agent --shell /bin/bash --create-home agent

WORKDIR /app

# Copy virtual environment from builder stage
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application source code
COPY src/ ./src/
COPY main.py ./

# Copy entrypoint script
COPY scripts/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# ── R5 (AC4, AC5): Create mount point directories ──
# These will be mounted as volumes for persistence
RUN mkdir -p /app/config /app/logs /app/data && \
    chown -R agent:agent /app

# Switch to non-root user
USER agent

# ── R5 (AC9): Document expected volumes and env vars ──
# Volumes:
#   /app/config  — config.yaml (AC4)
#   /app/logs    — log files and cost data (AC5)
# Environment variables:
#   GMAIL_EMAIL        — Gmail address (required)
#   GMAIL_APP_PASSWORD — Gmail app password (required)
#   GEMINI_API_KEY     — Gemini API key (required)
#   DRY_RUN            — Override dry_run mode (optional)
#   FEATURE_*          — Feature flag overrides (optional)

VOLUME ["/app/config", "/app/logs"]

# Health check — verify the process is running
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import sys; sys.exit(0)" || exit 1

# ── R5 (AC8): Entrypoint with signal handling ──
ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["python", "main.py"]